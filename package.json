{
    "name": "neogma",
    "version": "1.4.2",
    "description": "Object-Graph-Mapping neo4j framework, Fully-typed with TypeScript, for easy and flexible node and relationship creation",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "author": "Jason Athanasoglou <jathanasoglou@outlook.com>",
    "license": "MIT",
    "files": [
        "dist/**/*"
    ],
    "dependencies": {
        "@types/revalidator": "^0.3.7",
        "clone": "^2.1.2",
        "dotenv": "^8.2.0",
        "neo4j-driver": "^4.0.2",
        "revalidator": "^0.3.1",
        "uuid": "^7.0.2"
    },
    "devDependencies": {
        "@types/clone": "^0.1.30",
        "@types/dotenv": "^8.2.0",
        "@types/jest": "^26.0.4",
        "@types/node": "^12.6.4",
        "@types/uuid": "^7.0.2",
        "@typescript-eslint/eslint-plugin": "^3.6.0",
        "@typescript-eslint/parser": "^3.6.0",
        "eslint": "^7.4.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.1.0",
        "prettier": "^2.0.5",
        "typescript": "^3.9.2"
    },
    "scripts": {
        "lint": "eslint --fix --quiet src/**/*.ts",
        "format": "prettier --loglevel silent --write src/**/*.ts",
